  <script>
    // Prefill copy area with manifesto text
    const manifestoText = document.getElementById('manifesto').innerText.trim();
    const copyArea = document.getElementById('copyArea');
    copyArea.value = manifestoText;

    document.getElementById('copyBtn').addEventListener('click', async ()=>{
      try{
        await navigator.clipboard.writeText(copyArea.value);
        alert('Manifesto copied to clipboard.');
      }catch(e){
        copyArea.select();document.execCommand('copy');alert('Copied (fallback).');
      }
    });

    document.getElementById('downloadBtn').addEventListener('click', ()=>{
      const html = '<!doctype html>' + document.documentElement.outerHTML;
      const blob = new Blob([html], {type: 'text/html'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'manifesto-water.html'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    });

    document.getElementById('selectAll').addEventListener('click', ()=>{ copyArea.focus(); copyArea.select(); });

    // Tweet/share link
    const tweet = document.getElementById('tweet');
    const shareText = encodeURIComponent("Manifesto: Water, Technology & Future — a reflection on how we use finite resources for machines. Read and share.\n\n");
    tweet.href = `https://twitter.com/intent/tweet?text=${shareText}`;
  </script>
